<div class="cards-container">
    <div class="cards">
    <% @players.each do |player| %>
        <%= link_to player_path(player) do %>
            <% user = player.user %>
                <article class="card">
                    <header>
                        <h2><%= player.nickname %></h2>
                    </header>
                    <% if player.gender == "Male" %>
                        <%= image_tag "male_avatar.png" %>
                    <% else %>
                        <%= image_tag "female_avatar.jpg" %>
                    <% end %>
                    <div class="content">
                        <p>Category : <%= player.category %> </p>
                    </div>    
                </article>
            <% end %>
        <% end %>
    </div>
</div>
